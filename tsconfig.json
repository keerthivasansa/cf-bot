        "outDir": "dist",
        "lib": [
            "ES2022", 
            "DOM"
        ],
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "$src/*": ["src/*"],
            "$db/*": ["db/*"]
        }
    },
    "include": [
        "src",
        "src/types"
    ]
}